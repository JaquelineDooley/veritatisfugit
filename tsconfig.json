        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strict": true,
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
